doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Artesanos.com
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
  body.bg-light
    nav.navbar.navbar-expand-lg.navbar-light.bg-white.shadow-sm.mb-4
      .container
        a.navbar-brand(href="/inicio") Artesanos
        form.d-flex.mx-auto(style="width:50%")
          input.form-control(type="search", placeholder="Buscar", aria-label="Buscar")
        .d-flex.align-items-center.gap-3
          a(href="/inicio").text-dark.bi.bi-house
          a(href="#").text-dark.bi.bi-bell
          a(href="#").text-dark.bi.bi-person
          a(href="#").text-dark.bi.bi-gear

    .container
      .row.justify-content-center
        .col-md-8
          .card.mb-4.shadow-sm
            .card-body
              .d-flex.align-items-center.mb-2
                i.bi.bi-person-circle.fs-4.me-2
                strong Usuario Pepito
              p.text-muted Publicación destacada del día.
              img.img-fluid.mb-3(src="https://via.placeholder.com/600x300", alt="imagen")
              button.btn.btn-outline-secondary.btn-sm(type="button", data-bs-toggle="collapse", data-bs-target="#comentarios1") ▼ Ver Comentario
              .collapse.mt-2#comentarios1
                .border-top.pt-2
                  p.mb-1
                    strong Usuario123:
                  p Muy linda obra, felicitaciones.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
